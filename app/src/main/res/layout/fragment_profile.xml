<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Profile">

    <!-- TODO: Update blank fragment layout -->

    <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" /> -->


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/notificationProfile"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="41dp"
                            android:layout_marginBottom="5dp"
                            android:padding="1dp"
                             />

                        <ImageView
                            android:id="@+id/userNotificationProfile"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:padding="1dp"
                             />

                        <ImageView
                            android:id="@+id/SignOutProfile"
                            android:layout_width="47dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="285dp"
                            android:layout_toStartOf="@id/userNotificationProfile"
                            android:src="@android:drawable/ic_lock_power_off" />
                    </RelativeLayout>

                    </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="My"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="normal"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Profile"
                        android:textColor="@color/white"
                        android:textSize="33sp"
                        android:textStyle="bold"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </LinearLayout>
            <include
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"
                layout="@layout/item_image"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/item_add"/>
                    <include layout="@layout/item_info"/>
                    <include layout="@layout/item_email"/>



                </LinearLayout>



            </ScrollView>

        </LinearLayout>
</FrameLayout>